#НАЧАЛЬНОЕ РЕШЕНИЕ ЗАДАЧИ
def towerBuilder(n_floors)
babel =[]
for i in 1..n_floors
babel.push(' '*(n_floors-i)+'*'*i+'*'*(i-1)+' '*(n_floors-i))
end
return babel
end

#МОЖНО РЕШИТЬ КОРОЧЕ ЧЕРЕЗ СОЗДАНИЕ НОВОГО МАССИВА И УКАЗАНИЕМ ВЫРАЖЕНИЯ ДЛЯ ВЫЧИСЛЕНИЯ ЭЛЕМЕНТА МАССИВА
def towerBuilder(n_floors)
  Array.new(n_floors){|x| (' ' * (n_floors - x - 1)) + ('*' * (2 * x + 1)) + (' ' * (n_floors - x - 1))}
# Здесь |x| - переменная счетчика
# в () после |x| записано выражение, вычисляющее элемент массива
# в {} записан сам цикл повторения от 0 до количества элементво массива
end
